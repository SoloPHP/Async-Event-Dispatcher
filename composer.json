{
  "name": "solophp/async-event-dispatcher",
  "description": "Async event dispatcher with pluggable adapters",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "psr/event-dispatcher": "^1.0",
    "solophp/contracts": "dev-main@dev"
  },
  "suggest": {
    "solophp/job-queue": "^1.0",
    "psr/container": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Solo\\AsyncEventDispatcher\\": "src/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.13",
    "psr/container": "^2.0"
  },
  "scripts": {
    "phpstan": "phpstan analyse src",
    "cs": "phpcs --standard=PSR12 src/",
    "cs-fix": "phpcbf --standard=PSR12 src/"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
